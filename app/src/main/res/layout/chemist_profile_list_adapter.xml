<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chmAdapCard"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linear1"
        android:background="@color/textcolorgray"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp"
        android:weightSum="10"
        android:layout_marginStart="5dp"
        android:background="@color/textcolorwhite"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/chemistname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:layout_gravity="center"
            android:textColor="@color/textcolordarkgray"
            android:singleLine="true"
            android:paddingStart="10dp"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textAllCaps="true"/>

        <TextView
            android:id="@+id/isapproved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textcolorred"
            android:maxLines="2"
            android:textStyle="bold"
            android:ellipsize="end"
            android:textSize="9sp"
            android:textAllCaps="true"/>

        <!--<ImageView
            android:id="@+id/isapproved"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="@color/textcolordarkgray"
            android:singleLine="true"
            android:padding="5dp"
            android:background="#00000000"
            android:ellipsize="end"
            android:textSize="15sp"
            android:textAllCaps="true"/>-->


        <ImageButton
            android:id="@+id/chmimage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@color/textcolorwhite"
            android:src="@drawable/ic_chemist_red"/>

        <ImageButton
        android:id="@+id/editImg"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1.3"
        android:layout_marginRight="5dp"
        android:background="@color/textcolorwhite"
        android:src="@drawable/ic_edit"
        android:visibility="gone"/>

        <ImageButton
            android:id="@+id/delImg"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1.2"
            android:layout_marginRight="5dp"
            android:background="@color/textcolorred"
            android:src="@drawable/ic_delete_2"
            android:visibility="gone"/>

    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>