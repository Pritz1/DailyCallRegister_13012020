<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    app:cardCornerRadius="5dp"
    android:layout_marginRight="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:weightSum="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="15"
            android:orientation="vertical"
            android:weightSum="3">

        <TextView
            android:id="@+id/drname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:textColor="#4D4D4D"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="16sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="left"
            android:layout_weight="2"
            android:text="Dr. Prithvi Chauhan"/>

            <TextView
            android:id="@+id/phno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:textColor="#4D4D4D"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="12sp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="left" android:layout_weight="1"
            android:text="(9699132906)"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id="@+id/isPracticing"
            android:backgroundTint="@color/transparentcolor"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_work_black_24dp"/>

       <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id="@+id/editPhNo"
            android:backgroundTint="@color/transparentcolor"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_phonelink_setup_black_24dp"/>

       <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:id="@+id/remarks"
            android:backgroundTint="@color/transparentcolor"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_remarks"/>

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:backgroundTint="@color/transparentcolor"
            android:id="@+id/deletedoc"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_delete_2"/>

    </LinearLayout>

</android.support.v7.widget.CardView>