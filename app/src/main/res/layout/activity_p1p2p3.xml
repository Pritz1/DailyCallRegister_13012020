<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.P1P2P3"
    android:orientation="vertical"
    android:id="@+id/p_addedit_outerlay"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/drnmTxt"
                    android:text="Doctor's Name"
                    android:textColor="#424242"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:gravity="center"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/dropDownLayout"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Exposure Products for Dr : "
                android:textColor="#424242"
                android:textSize="18sp"
                android:layout_marginLeft="15dp"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:id="@+id/ll4"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P1 : "
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:id="@+id/txt1"
                        />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:autofillHints="P1"
                        android:padding="15dp"
                        android:spinnerMode="dialog"
                        android:textColor="#808080"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P2 : "
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:id="@+id/txt2"
                        />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:autofillHints="Select Product"
                        android:padding="15dp"
                        android:spinnerMode="dialog"
                        android:textColor="#808080"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P3 : "
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:id="@+id/txt3"
                        />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spn3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:autofillHints="Select Product"
                        android:padding="15dp"
                        android:spinnerMode="dialog"
                        android:textColor="#808080"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P4 : "
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:id="@+id/txt4"
                        />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spn4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:autofillHints="Select Product"
                        android:padding="15dp"
                        android:spinnerMode="dialog"
                        android:textColor="#808080"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="P5 : "
                        android:textColor="#424242"
                        android:textSize="16sp"
                        android:layout_margin="10dp"
                        android:textStyle="bold"
                        android:id="@+id/txt5"
                        />

                    <android.support.v7.widget.AppCompatSpinner
                        android:id="@+id/spn5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:autofillHints="Select Product"
                        android:padding="15dp"
                        android:spinnerMode="dialog"
                        android:textColor="#808080"
                        />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
--
        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">

            <!-- Capture picture button -->

            <android.support.design.button.MaterialButton
                android:id="@+id/submitBtn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="SUBMIT"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:padding="10dp"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>