<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/outerLinearLay"
    android:weightSum="8">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="4"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:scaleType="fitCenter"
        android:src="@drawable/partho_sir_pic"/>
<android.support.v4.widget.Space
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    />
    <TextView
        android:id="@+id/marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="10dp"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:text="ABC of Life during Corona - Partha Paul, Palsons Derma(5th April 2020)"
        android:textSize="20sp"
        android:textStyle="italic"
        android:marqueeRepeatLimit="marquee_forever"
        android:scrollHorizontally="true"
        />

    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:minWidth="200dp"
        android:padding="20dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="13"
        android:layout_weight="1">

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_vertical"
        android:id="@+id/btnPause"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="pause"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPause"
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_pause_black_35dp"
                android:padding="16dp"
                android:background="@color/transparentcolor"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:id="@+id/btnPlay"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="play"
        android:layout_weight="3">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_play_circle_outline_black_24dp"
                android:padding="16dp"
                android:background="@color/transparentcolor"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_margin="10dp"
        android:id="@+id/playCard"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:onClick="stop"
        android:layout_weight="2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_stop_black_24dp"
                android:padding="16dp"
                android:background="@color/transparentcolor"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"/>

    </LinearLayout>
</LinearLayout>